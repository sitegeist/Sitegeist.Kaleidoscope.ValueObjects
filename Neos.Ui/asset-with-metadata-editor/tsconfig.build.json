{
    "compilerOptions": {
        "esModuleInterop": true,
        "jsx": "react",
        "noEmitOnError": true,
        "strict": true,
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "allowJs": true,
        "skipLibCheck": true,
        "target": "ES5",
        "lib": ["dom", "es2016", "es2017.object"],
        "declaration": true,
        "outDir": "./lib",
        "module": "CommonJS"
    },
    "include": ["./src/**/*.*"]
}
